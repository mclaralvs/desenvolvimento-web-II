<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!--ALL SVG ILLUSTRATIONS ARE FROM UNDRAW.CO-->

    <!--ALL BRANDS' SVG ARE FROM ICONS.CORREUI.IO-->

    <!--GOOGLE FONTS-->
    <link href="https://fonts.googleapis.com">
    <link href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Raleway:wght@100;300;400;500;600&display=swap"
        rel="stylesheet">

    <!--BOOTSTRAP-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>

    <!--PERSONAL CSS-->
    <link href="/css/style.css" rel="stylesheet" type="text/css">

    <title>Portfolio</title>
</head>

<body>
    <navbar class="navbar">
        <nav>
            <ul class="nav-links">
                <a href="#about">
                    <li>About</li>
                </a>
                <a href="#skills">
                    <li>Skills</li>
                </a>
                <a href="#tech&tools">
                    <li>Tech&Tools</li>
                </a>
                <a href="/social">
                    <li id="contact-link">Contacts</li>
                </a>
            </ul>

            <div class="burger">
                <div class="l1"></div>
                <div class="l2"></div>
                <div class="l3"></div>
            </div>
        </nav>
    </navbar>

    <%- include('index.ejs') %>

    <script>
        const navSlide = () => {
            const burger = document.querySelector('.burger');
            const nav = document.querySelector('.nav-links');
            const navLinks = document.querySelectorAll('.nav-links li');

            burger.addEventListener('click', () => {
                // toggle nav 
                nav.classList.toggle('nav-active');

                // fading links
                navLinks.forEach((link, index) => {
                    // necessary for the animation to happen every time
                    if (link.style.animation) {
                        link.style.animation = ''
                    }
                    else {
                        // index = different times for every links 
                        link.style.animation = `navLinkFade 0.5s ease forwards ${index / 7 + 0.4}s`;
                    }
                });

                // burger turning into x animation
                burger.classList.toggle('toggle');
            });
        }

        navSlide();
    </script>

</body>

</html>